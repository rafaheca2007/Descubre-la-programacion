void elemento(){
  background(0,0,0);
  for(int i = 0; i<=Puntos; i++)
    {
			fill(25,25,25);
    	ellipse(50,750, 300,20);
      ellipse(50,750, 300,20); 
posX = floor(random(50,750));
posY = floor(random(100,550));
  fill(255,0,0);
   ellipse(posX, posY, Tamano, Tamano);  

  }
}

void puntos(){
  fill(255,0,0);
  textSize(18);
  text("PUNTOS: " + (Puntos), 250, 30);
}

void tiempo(){
   fill(255,0,0);
  textSize(18);
  text("TIEMPO:" + millis()/1000, 20, 30);
}

void raton(){
  if(Jugar = 1){
    if(Repinta = 0){
      Repinta = 1;{
        if(mouseX > posX-tamano);{
          if(mouseX < posX+tamano);{
            if(mouseY > posY-tamano);{
              if(mouseY < posY+tamano); 
      }
    }
  }
}

